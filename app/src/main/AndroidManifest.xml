<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.perfectscanner">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/perfect_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/perfect_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".option"
            android:screenOrientation="portrait" />
        <activity android:name=".idCard" />
        <activity
            android:name=".panCard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".passport"
            android:screenOrientation="portrait" />
        <activity
            android:name=".voterID"
            android:screenOrientation="portrait" />
        <activity
            android:name=".aadhaarCard"
            android:screenOrientation="portrait" />
        <activity android:name=".logoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>