<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aadhaarCard"
    android:background="@drawable/bg_color">

    <ImageView
        android:id="@+id/profile_aadharCard"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/accounts"
        android:contentDescription="@string/todo"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:text="@string/aadhar_card_scan"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/profile_aadharCard"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/docs_aadharCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/docs"
        android:contentDescription="@string/todo"/>

    <ImageView
        android:id="@+id/a4sheet_aadharCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.465"
        app:srcCompat="@drawable/a4sheet" />

    <ImageView
        android:id="@+id/frontImg"
        android:layout_width="110dp"
        android:layout_height="263dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/a4sheet_aadharCard"
        app:layout_constraintStart_toStartOf="@+id/a4sheet_aadharCard"
        app:layout_constraintTop_toTopOf="@+id/a4sheet_aadharCard"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/front_img" />

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="110dp"
        android:layout_height="263dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/a4sheet_aadharCard"
        app:layout_constraintEnd_toEndOf="@+id/a4sheet_aadharCard"
        app:layout_constraintTop_toTopOf="@+id/a4sheet_aadharCard"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back_img" />
    <ImageView
        android:id="@+id/next_aadharCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/next" />

</androidx.constraintlayout.widget.ConstraintLayout>